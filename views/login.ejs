<!DOCTYPE html>
<html lang="en">
<head>
    <%- include ('partials/head.ejs') %>
    <link href="/css/login.css" rel="stylesheet">
</head>
<body>
    <%- include ('partials/header.ejs') %>
    <main>
        <section class="contenedor_form">
            <div class="div_form borde-celeste">
                <form action="/users/login" method="POST" class="formulario">
                    <img class="icono" src="/img/iconografia/surf.png">
                    <h1 class="iniciosesion">INICIO DE SESION</h1>
                    <p>¡Bienvenido otra vez surfer, te extrañamos!</p>
                    <div class="completar">
                        <input type="email" placeholder="e-mail" name="email" class="input">
                        <input type="password" placeholder="contraseña" name="contrasena" class="input">
                    </div>
                    <% if (locals.errors) { %>
                        <div class="error-message">
                            <% for (let error of locals.errors) { %>
                                <p><%= error.msg %></p>
                            <% } %>
                        </div>
                    <% } %>
                    <br>
                    <a href="/users/register" class="TextoCreaCuenta">CREA TU CUENTA</a>
                    <br>
                    <div class="boton text-center">
                        <button type="submit" class="btn btn-color">INICIAR SESION</button>
                    </div>
                </form>
            </div>
        </section>
    </main>
    <%- include ('partials/footer.ejs') %>
    <script>
        $(document).ready(function () {
            $('.dropdown-toggle').on('click', function () {
                // Cierra todos los menús desplegables
                $('.dropdown-menu').removeClass('show');
                // Abre el menú desplegable asociado al botón que se hizo clic
                $(this).next('.dropdown-menu').toggleClass('show');
            });
        });
    </script>
</body>
</html>
