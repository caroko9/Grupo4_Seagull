<!DOCTYPE html>
<html lang="en">
    <link rel="stylesheet" href="/css/productos.css">
<%- include ('partials/head.ejs') %>
<body>

  <%- include ('partials/header.ejs') %>
  <main>
    <div class="buscador mt-5 mx-auto text-center">
        <h1 class="titulo">NUESTROS PRODUCTOS</h1>
        <div class="search container-sm">
          <nav class="navbar navbar-#B0DEE4 bg-#B0DEE4">
            <form class="form-inlin w-100">
              <input class="form-control mx-auto" type="search" placeholder= "¿Qué producto estás buscando?" aria-label="Search">
      </div>
      </div>
   
      <div class="contenedor">
        <form action="/escuelas/escuela-detalle" method="GET">
          <% for (let i = 0; i < escuelasRegistradas.length; i++) { %>
            <article class="producto">
              <div class="imagen">
                <a href="/escuelas/escuela-detalle/<%= escuelasRegistradas[i].id %>">
                  <img src="/img/escuelas/<%= escuelasRegistradas[i].imagen[0].filename %>" class="product1" alt="<%= escuelasRegistradas[i].nombre %>">
                </a>
                <div class="linea"></div>
                <div class="detalle">
                  <p class="nombre"><%= escuelasRegistradas[i].nombre %></p>
                  <p class="precio"><%= escuelasRegistradas[i].pais %></p>
                  <!-- You can add more details here if needed -->
                </div>
              </div>
            </article>
          <% } %>
        </form>
      </div>
      


  <%- include ('partials/footer.ejs') %>
  </main>
</body>
</html>