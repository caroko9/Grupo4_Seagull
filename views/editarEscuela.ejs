<!-- editarEscuela.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <!-- Include your head content here -->
</head>
<body>
  <h1>Edit School</h1>
  <form action="/escuelas/editarEscuela/<%= escuela.id %>" method="POST">
    <!-- Rellena los campos del formulario con los datos de la escuela -->
    <input type="text" name="nombre" value="<%= escuela ? escuela.nombre : '' %>">
    <input type="text" name="email" value="<%= escuela ? escuela.email : '' %>">
    <textarea name="descripcion"><%= escuela ? escuela.descripcion : '' %></textarea>
    <input type="text" name="pais" value="<%= escuela ? escuela.pais : '' %>">
    <!-- Añade otros campos del formulario según sea necesario -->
  
    <button type="submit">Guardar Cambios</button>
  </form>
</body>
</html>
