<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="/css/escuelas.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>

</head>
<%- include ('partials/head.ejs') %>
<body>
 
  <%- include ('partials/header.ejs') %>
  <div class="contenedor-celeste">
    <h2 class="titulo">AGREGAR PRODUCTO</h2>
    <form action="/productos/productos-create" method="POST" name="escuelaCreada">
        <div class="input-1">
          <div class="inputF">
            <br>
            <label for="exampleFormControlInput1" class="nombre-input">Producto</label>
            <input type="text" class="form-control"  name="nombre" placeholder="Nombre del Producto">
            
      <div class="contenedor-archivos">
      
       <div class="mb-3">
        <label for="formFileMultiple" class="nombre-input">Carga hasta tres fotos</label>
        <input class="form-control" type="file" name="imagen" id="imagen" multiple accept="image/*" required>
      </div>
      
    </div>
    <div class="inputF">
      <label for="exampleFormControlTextarea1" class="nombre-input">Precio</label>
      <textarea class="form-control" name="precio" id="precio" rows="3"></textarea required>
    </div>

    <div class="inputF">
        <label for="exampleFormControlTextarea1" class="nombre-input">Descuento</label>
        <textarea class="form-control" name="descuento" id="descuento" rows="3"></textarea required>
      </div>

      </form>
      <script src="ruta/a/jquery.js"></script>
      <script src="ruta/a/bootstrap.js"></script>
      
      </body>
      </html>